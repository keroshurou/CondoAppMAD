<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/btnNotification"
        android:layout_width="50dp"
        android:layout_height="50sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_notifications_24" />

    <ImageView
        android:layout_alignParentEnd="true"
        android:id="@+id/btnBack"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        android:layout_height="50sp"
        android:src="@drawable/ic_baseline_logout_24" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnNotification"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="-3dp">

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/parcelCardView"
                android:layout_width="match_parent"
                android:layout_height="170sp"
                android:layout_margin="5dp"

                app:cardCornerRadius="15sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#83BDB8"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/btnParcel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Parcel Collect"
                        android:textAllCaps="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:src="@drawable/parcel_collection" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/residentFacility"
                android:layout_width="match_parent"
                android:layout_height="170sp"
                android:layout_margin="5dp"
                app:cardCornerRadius="15sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#83BDB8"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/btnFacility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Facility Maintenance &amp; Report"
                        android:textAllCaps="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:padding="15sp"
                        android:src="@drawable/facilities_booking" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/visitorRes"
                android:layout_width="match_parent"
                android:layout_height="170sp"
                android:layout_margin="5dp"
                app:cardCornerRadius="15sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#83BDB8"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/visitorReg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Visitor Registration"
                        android:textAllCaps="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:src="@drawable/visitor_regitration" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

